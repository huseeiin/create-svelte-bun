{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"allowArbitraryExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"lib": ["ESNext"],
		"skipLibCheck": true,
		"noPropertyAccessFromIndexSignature": false
	},
	"include": ["src"]
}
