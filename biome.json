{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"linter": {
		"rules": {
			"all": true,
			"nursery": {"all": true, "noNodejsModules": "off"},
			"correctness": {"all": true, "noUndeclaredVariables": "off"},
			"style": {"all": true, "useBlockStatements": "off"}
		},
		"ignore": ["build", ".svelte-kit", "node_modules"]
	},
	"formatter": {
		"enabled": false
	}
}
