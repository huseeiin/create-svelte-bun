{
	"name": "create-svelte-bun",
	"version": "1.2.9",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/huseeiin/create-svelte-bun.git"
	},
	"homepage": "https://github.com/huseeiin/create-svelte-bun",
	"scripts": {
		"build": "bun build src/index.ts --target bun --outdir dist",
		"test": "bun run build && bun link create-svelte-bun && create-svelte-bun",
		"publish": "bun run build && npm publish",
		"lint": "prettier . --write && tsc && biome check --apply-unsafe ./src",
		"prepublish": "bun lint"
	},
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"@faker-js/faker": "^8.4.0",
		"kolorist": "^1.8.0"
	},
	"bin": {
		"create-svelte-bun": "dist/index.js"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.5.3",
		"@tsconfig/strictest": "^2.0.2",
		"@types/bun": "^1.0.4",
		"prettier": "^3.2.5",
		"typescript": "^5.3.3"
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100
	}
}
